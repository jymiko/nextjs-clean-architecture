// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users table for authentication and authorization
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?
  role      UserRole @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions  Session[]
  orders    Order[]

  @@map("users")
}

// User roles enum
enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Categories for organizing menu items
model Category {
  id          String       @id @default(cuid())
  name        String       @unique
  description String?
  displayOrder Int         @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  menuItems   MenuItem[]

  @@map("categories")
}

// Menu items (foods and drinks)
model MenuItem {
  id           String      @id @default(cuid())
  name         String
  description  String?
  price        Decimal     @db.Decimal(10, 2)
  category     Category    @relation(fields: [categoryId], references: [id])
  categoryId   String
  imageUrl     String?
  isAvailable  Boolean     @default(true)
  preparationTime Int?     // in minutes
  nutritionalInfo Json?    // Store nutritional information as JSON
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  orderItems   OrderItem[]

  @@map("menu_items")
}

// Orders table
model Order {
  id             String      @id @default(cuid())
  orderNumber    String      @unique
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  tableNumber    String?
  orderType      OrderType   @default(DINE_IN)
  status         OrderStatus @default(PENDING)
  subtotal       Decimal     @db.Decimal(10, 2)
  taxAmount      Decimal     @db.Decimal(10, 2) @default(0)
  discountAmount Decimal     @db.Decimal(10, 2) @default(0)
  totalAmount    Decimal     @db.Decimal(10, 2)
  paymentStatus  PaymentStatus @default(PENDING)
  paymentMethod  String?
  notes          String?
  staff          User        @relation(fields: [staffId], references: [id])
  staffId        String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]
  payments       Payment[]

  @@map("orders")
}

// Order types enum
enum OrderType {
  DINE_IN
  TAKEAWAY
  DELIVERY
}

// Order status enum
enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

// Payment status enum
enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
  PARTIALLY_REFUNDED
}

// Order items (line items in an order)
model OrderItem {
  id          String    @id @default(cuid())
  order       Order     @relation(fields: [orderId], references: [id])
  orderId     String
  menuItem    MenuItem  @relation(fields: [menuItemId], references: [id])
  menuItemId  String
  quantity    Int
  unitPrice   Decimal   @db.Decimal(10, 2)
  totalPrice  Decimal   @db.Decimal(10, 2)
  specialRequest String?
  createdAt   DateTime  @default(now())

  @@map("order_items")
}

// Payment records
model Payment {
  id            String        @id @default(cuid())
  order         Order         @relation(fields: [orderId], references: [id])
  orderId       String
  amount        Decimal       @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  paymentDetails Json?        // Store payment gateway response
  status        PaymentStatus
  paidAt        DateTime?
  createdAt     DateTime      @default(now())

  @@map("payments")
}

// Payment methods enum
enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  EWALLET
  BANK_TRANSFER
  QR_CODE
}

// Tables for dine-in service
model Table {
  id          String     @id @default(cuid())
  number      String     @unique
  capacity    Int
  isAvailable Boolean    @default(true)
  location    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("tables")
}

// Inventory for tracking stock
model Inventory {
  id          String   @id @default(cuid())
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId  String   @unique
  stock       Int      @default(0)
  minStock    Int      @default(10) // Alert when stock is below this
  unit        String   @default("pcs")
  lastUpdated DateTime @default(now())

  @@map("inventory")
}

// Transaction logs for audit trail
model TransactionLog {
  id          String   @id @default(cuid())
  orderId     String?
  type        String   // e.g., "ORDER_CREATED", "PAYMENT_RECEIVED", "ORDER_CANCELLED"
  description String
  metadata    Json?    // Store additional data
  userId      String?
  createdAt   DateTime @default(now())

  @@map("transaction_logs")
}
